#!/usr/bin/env zsh
# zsh-optionrc: Zsh Options Configuration File
# ~/.config/zsh/zsh-optionrc

# === Quality of Life ===
setopt autocd                   # Just type dir name to cd into it
setopt correct                  # Auto-correct commands
setopt numericglobsort          # Sort filenames naturally (e.g. 1,2,10)

# === Globbing Power ===
setopt extendedglob             # Enables regex-style globs
setopt nocaseglob               # Case-insensitive globs
setopt rcexpandparam            # Fancy parameter expansion like ${^var}

# === History Management ===
setopt APPEND_HISTORY           # Append (not overwrite) on shell exit
setopt INC_APPEND_HISTORY       # Append commands as soon as executed
setopt SHARE_HISTORY            # Share history instantly between sessions
setopt EXTENDED_HISTORY         # Store timestamps in history
setopt HIST_REDUCE_BLANKS       # Trim extra spaces
setopt HIST_VERIFY              # Show command before running from history
setopt HIST_IGNORE_DUPS         # Avoid duplicates
setopt histignorealldups        # Remove older duplicates
setopt histignorespace          # Skip commands starting with a space
setopt hist_save_no_dups        # Save history without duplicates
setopt hist_find_no_dups        # Do not find duplicates in history search
setopt hist_no_store            # Don't store history commands themselves
# Just in case, some redundant options for history
setopt HIST_BEEP                # Audible feedback on failed history search

# === Prompt Substitution ===
setopt prompt_subst             # Allow $(...) in PROMPT
setopt prompt_cr                # Move to new line after prompt if wrapped
